{% macro list(img = 'null', title = 'null', desc = 'null') %}
  <li>
    {% if img != 'null' %}
    <div><img src="{{ img }}" alt="{{ alt }}"></div>
    {% endif %}
    {% if title != 'null' %}
      <h3>{{ title }}</h3>
    {% endif %}
    {% if desc != 'null' %}
      <p>{{ desc }}</p>
    {% endif %}
  </li>
{% endmacro %}